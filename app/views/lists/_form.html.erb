<%= form_with model: @list do |form| %>
  <div class="my-2">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
    <% @list.errors.full_messages_for(:title).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="my-2">
    <%= form.label :color, class: "form-label"%>
    <%= form.text_field :color, class: "form-control", maxlength: 6 %>
    <% @list.errors.full_messages_for(:color).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="my-2">
    <%= form.label :description, class: "form-label"%>
    <%= form.text_area :description, class: "form-control" %>
    <% @list.errors.full_messages_for(:description).each do |message| %>
      <div class="text-danger"><%= message %></div>
    <% end %>
  </div>

  <div class="my-2">
    <%= form.label :status, class: "form-label" %>
    <%= form.select :status, Visible::VALID_STATUSES, { selected: list.status || 'public' }, class: "form-select" %>
  </div>

  <div class="my-2 d-flex">
    <%= form.submit class: 'btn btn-primary' %>
  </div>
<% end %>
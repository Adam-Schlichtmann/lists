<h1><%= @list.title %></h1>

<p><%= @list.color %></p>

<p><%= @list.description %></p>

<ul>
  <li><%= link_to "Edit", edit_list_path(@list) %></li>
  <li><%= link_to "Destroy", list_path(@list), data: {
    turbo_method: :delete,
    turbo_confirm: "Are you sure?"
  } %></li>
</ul>

<h2>List</h2>
<% @list.list_items.each do |list| %>
  <p>
    <%= list.item %>
  </p>
<% end %>

<h2>Add an item:</h2>
<%= form_with model: [ @list, @list.list_items.build ] do |form| %>
  <p>
    <%= form.label :item %><br>
    <%= form.text_field :item %>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>